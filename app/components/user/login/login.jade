header.login.hero
  .bktxt
    div(layout='row', layout-xs="column", md-scroll-y='', layout-align='start center', layout-padding='')
      div(flex="")
      div(flex-gt-lg="30",flex-gt-md="45", flex-lt-md="70", flex="98")
        md-card.md-whiteframe-z2
          md-card-content
            h1 Login
            .md-inline-form(layout='column')
              md-content(layout-padding='')
                form(action='#', method='post', #f="ngForm", (ngSubmit)="onSubmit(f.value)")
                  md-input-container
                    label Email
                    input.md-input(type='email', name='userId', value='', ngControl="userId")
                  md-input-container
                    label Password
                    input.md-input(type='password', name='password', value='', ngControl="password")
                  md-input-container
                    select(ngControl='accountIdentifier')
                      option(value="poc1")
                          | poc1
                      option(value="poc2")
                          | poc2
                  section(layout='row', layout-sm='column', layout-align='end center', layout-wrap='')  
                    button.md-raised(md-raised-button='') Cancel
                    button.md-raised.md-primary(md-raised-button='', type='submit') Sign In

      div(flex="")
