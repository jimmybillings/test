                button.md-icon-button(md-button='', title='More',[routerLink]="['Home']")
                  i.material-icons(md-icon) more_vert
          md-card-content
            .asset-name.md-caption {{assetDetail.name}}
            .sd-hd([ngClass]="{hd: assetDetail.metaData[2].value == 'High Definition', sd: assetDetail.metaData[2].value == 'Standard Definition'}")
