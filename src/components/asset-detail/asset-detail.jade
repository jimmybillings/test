      md-card.primary-info(flex='', layout='column',layout-fill='')
        md-toolbar( layout-align='center end')
          span(flex='')
            nav.md-toolbar-tools
              button.md-icon-button(md-button='', title='Sharing Options',[routerLink]="['Home']")
                i.material-icons(md-icon) share
              button.md-icon-button(md-button='', title='Download Comp',[routerLink]="['Home']")
                i.material-icons(md-icon) file_download
              button.md-icon-button(md-button='', title='Add to Collection',[routerLink]="['Home']")
                i.material-icons(md-icon) library_add
              button.md-icon-button(md-button='', title='More',[routerLink]="['Home']")
                i.material-icons(md-icon) more_vert
        md-card-content
        
          .asset-name.md-caption(flex='', layout='column') {{assetDetail.name}}
          div(layout='row', layout-wrap='')
            .sd-hd([ngClass]="{hd: assetDetail.clipData[2]?.value == 'High Definition', sd: assetDetail.clipData[2]?.value == 'Standard Definition'}")
            .rights.md-caption(flex='') rights managed 
          
          h4 {{getMetaField('Title')}}
          h5.md-subhead {{getMetaField('Description')}}
          
          md-card-actions(layout='column', layout-align='center center', layout-wrap='')
