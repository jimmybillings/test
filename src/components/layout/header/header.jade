md-toolbar.glb([ngClass]="{'fixed': showFixed}")
  span(flex='')
  nav.md-toolbar-tools
    md-button.md-icon-button(arial-label='Settings')
    button.md-icon-button(md-button='', title='More',[routerLink]="['Home']")
      i.material-icons(md-icon) menu
    a.home-link(flex='', [routerLink]="['Home']", title='Home')
      .logo-wrapper
        .logo
          img(src='{{config.logo.value}}')
      h1 {{config.title.value}}
    button.is-dd(md-button='', *ngIf="currentUser.loggedIn()", [routerLink]="['UserManagement', 'Profile']", [ngClass]="{'md-primary': !showFixed}", hide='', show-gt-sm='') 
      | {{currentUser.fullName()}}

    md-button(*ngIf="!currentUser.loggedIn()", md-button='', [routerLink]="['UserManagement', 'Login']") Login

    md-button.is-outlined([ngClass]="{'md-accent': !showFixed}", *ngIf="!currentUser.loggedIn()", md-button='', [routerLink]="['UserManagement', 'Register']") Sign Up
    logout(*ngIf="currentUser.loggedIn()", hide='', show-gt-sm='')
    
    button.md-icon-button(md-button='', *ngIf="currentUser.loggedIn()", title='Search', [routerLink]="['Search']")
      i.material-icons(md-icon='') search
    

    button.md-icon-button.is-dd(md-button='', *ngIf="currentUser.loggedIn()", [routerLink]="['UserManagement', 'Profile']", [ngClass]="{'md-primary': !showFixed}", hide='', show-xs='') 
      i.material-icons(md-icon='') person
      
    button.md-icon-button(md-button='', title='More',[routerLink]="['Home']", hide='', show-gt-sm='')
      i.material-icons(md-icon='') more_vert
