form.md-inline-form(layout='row', flex='100', layout-align='start', [ngFormModel]="searchForm", (ngSubmit)="onSubmit(searchForm.value.query)")
  input(md-input="", type='text', placeholder="{{ 'HOME.SEARCH_BOX_LABEL' | translate }}", ngControl="query")
  button(type='submit',[disabled]="!searchForm.valid") Search
    i.material-icons(md-icon='') search
    
  button.md-icon-button.close(md-button='', title='close search', type="button", (click)= "closeSearch()")
    i.material-icons(md-icon='') close

div(layout='row', flex='100', layout-align='start')
  select(autofocus="autofocus", (change)="onSubmit($event.target.value)")
    option(*ngFor="#term of searchTerms | async", value="{{term.term}}") {{term.term}} ( {{term.count}} )
  