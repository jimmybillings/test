md-toolbar.glb([ngClass]="{'fixed': showFixed}")
  span(flex='')
  nav.md-toolbar-tools
    md-button.md-icon-button(arial-label='Settings')
    button.md-icon-button(md-button='', title='More',[routerLink]="['Home']")
      i.material-icons(md-icon) menu
    a.home-link(flex='', [routerLink]="['Home']", title='Home')
      .logo-wrapper
        .logo
          img(src='data:image/png;base64,', alt='{{config.title.value}}')
    button.is-dd(md-button='', *ngIf="loggedInState | async", [routerLink]="['UserManagement', 'Profile']", [ngClass]="{'md-primary': !showFixed}", hide='', show-gt-sm='') 
      | {{currentUser.fullName() | async}}

    md-button(*ngIf="!(loggedInState | async)", md-button='', [routerLink]="['UserManagement', 'Login']") {{ 'HEADER.LOGIN_LABEL' | translate}}

    md-button.is-outlined([ngClass]="{'md-accent': !showFixed}", *ngIf="!(loggedInState | async)", md-button='', [routerLink]="['UserManagement', 'Register']") {{ 'HEADER.SIGN_UP_LABEL' | translate}}
    
    md-button.md-caption.md-primary.md-hue-2(*ngIf="loggedInState | async", md-button='', (click)="logOut()", [routerLink]="['Home']", hide='', show-gt-sm='') {{ 'HEADER.LOGOUT_LABEL' | translate}}
    
    button.md-icon-button(md-button='', *ngIf="loggedInState | async", title='Search', [routerLink]="['Search']")
      i.material-icons(md-icon='') search
    

    button.md-icon-button.is-dd(md-button='', *ngIf="loggedInState | async", [routerLink]="['UserManagement', 'Profile']", [ngClass]="{'md-primary': !showFixed}", hide='', show-xs='') 
      i.material-icons(md-icon='') person
      
    button.md-icon-button(md-button='', title='More',[routerLink]="['Home']", hide='', show-gt-sm='')
      i.material-icons(md-icon='') more_vert
