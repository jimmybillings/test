div(*ngIf="header")
  header
    md-toolbar.glb([ngClass]="{'fixed': showFixed, 'search-closed': false}")
      app-header([showFixed]="showFixed", [currentUser]="currentUser", [state]="state", [config]="(header | async)", (onLogOut)="logout()")

          
      div.search-tools(*ngIf="searchBarIsActive")
        .md-toolbar-tools(flex='', layout='row', layout-align='start start')
          search-box([config]="searchBox | async", (searchContext)="newSearchContext($event)")


    
  notification([state]="state")
  .main-content
    router-outlet
  app-footer([currentUser]="currentUser", [config]="(footer | async)", [supportedLanguages]="supportedLanguages", (onChangeLang)="changeLang($event)")
