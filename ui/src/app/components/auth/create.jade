.md-inline-form(layout='column', ng-cloak='')
  md-content(layout-padding='')
    form(ng-submit='vm.create()')
      md-input-container
        label Username
        input(ng-model='vm.user.username')
      md-input-container
        label Password
        input(ng-model='vm.user.password')
      md-button.md-raised.md-primary(type='submit') Submit

